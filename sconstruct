#!/usr/bin/scons

prefix = ARGUMENTS.get("PREFIX", "")

env = Environment()
env.Alias("install", '.')
env.Append(CXXFLAGS = ["-g", "-O2", "-Wall", "-pthread", "-rdynamic"])
env.Append(CPPPATH = ["/usr/lib", "/usr/local/lib"])

library = env.SharedLibrary(
    target = "build/yappi",
    source = ["src/registry.cpp", "src/engines.cpp", "src/core.cpp"],
    CPPPATH = ["include"],
    LIBS = ["zmq", "crypto", "dl", "pthread", "rt"],
    LINKFLAGS = ["-Wl,-soname=libyappi.so.1", "-Wl,-Bsymbolic"])

binary = env.Program(
    target = "build/yappi",
    source = ["src/main.cpp"],
    CPPPATH = ["include"],
    LIBS = ["yappi"],
    LIBPATH = ["build"])

env.Requires(binary, library)

Export(['env'])
plugins = SConscript("plugins/sconscript")

env.Install(prefix + "/usr/bin", binary)
env.InstallAs(prefix + "/usr/lib/libyappi.so.1.0.0", library)
env.Install(prefix + "/usr/lib/yappi", plugins)
